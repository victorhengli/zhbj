<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_red_bg"
            >
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/ib_news_detail_back"
                     android:background="@null"
                     android:src="@drawable/back"
                     android:layout_alignParentLeft="true"
                     android:padding="10dp"
                     android:layout_centerVertical="true"
                />
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/ib_news_detail_share"
                     android:background="@null"
                     android:src="@drawable/icon_share"
                     android:layout_alignParentRight="true"
                     android:padding="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_centerVertical="true"
                />
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/ib_news_detail_textsize"
                     android:background="@null"
                     android:src="@drawable/icon_textsize"
                     android:layout_toLeftOf="@id/ib_news_detail_share"
                     android:padding="10dp"
                     android:layout_centerVertical="true"
                />

    </RelativeLayout>
    <WebView android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/news_detail_webview"
            >
    </WebView>
</LinearLayout>