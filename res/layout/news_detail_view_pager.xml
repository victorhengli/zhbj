<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
            >
        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/news_detail_indicator_titles"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
                />
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@android:color/transparent"
                     android:id="@+id/news_cate_arr"
                     android:src="@drawable/news_cate_arr"
                     android:paddingTop="15dp"
                     android:paddingRight="5dp"
                />
    </LinearLayout>
     <android.support.v4.view.ViewPager android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/news_detail_view_pager"
             >

     </android.support.v4.view.ViewPager>
</LinearLayout>