<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:padding="5dp"
        >
    <ImageView android:layout_width="140dp"
               android:layout_height="70dp"
               android:id="@+id/iv_news_detail"
               android:layout_alignParentLeft="true"
               android:scaleType="fitXY"
               android:src="@drawable/news_pic_default"
            />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_news_detail_title"
                  android:layout_toRightOf="@id/iv_news_detail"
                  android:layout_alignParentTop="true"
                  android:paddingLeft="20dp"
                  android:textColor="#000"
                  android:maxLines="2"
                  android:ellipsize="end"
                  android:text="智慧北京智慧北京智慧北京智慧北京智慧北京智慧北京智慧北京智慧北京智慧北京智慧北京智慧北京智慧北京"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_news_detail_date"
                  android:layout_alignParentBottom="true"
                  android:layout_toRightOf="@id/iv_news_detail"
                  android:paddingLeft="20dp"
                  android:text="2016-04-25"
                  android:textSize="16dp"
                />
</RelativeLayout>